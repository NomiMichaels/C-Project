<Window x:Class="PLWPF.Trainee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Trainee" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>

        </Grid.RowDefinitions>
        <StackPanel Name="Tester_login" Grid.Row="1">
            <TextBlock Text="הכנס תעודת זהות" FontSize="24" FontFamily="Gan CLM" Height="40" Margin="130,50,130,0"/>
            <PasswordBox Name="Tester_Password" Height="38" Margin="100,0" FontSize="25" MaxLength="9"/>
        </StackPanel>
        <Button Content="אישור" FontSize="20" FontFamily="Gan CLM" Margin="102,148,279,10" Grid.Row="1" Click="Button_Click" />
        <Button Content="תלמיד חדש" FontSize="15" FontFamily="Gan CLM" Margin="280,148,101,10" Grid.Row="1"  Background="White" BorderBrush="White" Foreground="#FF1B1BA2" Click="Button_Click" />

    </Grid>
</Window>
